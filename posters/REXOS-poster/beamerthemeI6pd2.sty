\RequirePackage{tangocolors}
\selectcolormodel{rgb}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=fudarkblue,bg=fudarkblue}
\setbeamercolor{footline}{fg=tabutter, bg=fudarkblue}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=fuwhite}
\setbeamercolor{title in headline}{fg=fuwhite}
\setbeamercolor{author in headline}{fg=fuwhite}
\setbeamercolor{institute in headline}{fg=fuwhite}

\setbeamercolor{framesubtitle}{fg=fuwhite, bg=fudarkblue}
\setbeamercolor{author in head/foot}{fg=fuwhite, bg=fudarkblue}
\setbeamercolor{title in head/foot}{fg=fuwhite, bg=fudarkblue}

\setbeamercolor*{normal text}{fg=fudarkblue, bg=fublue}
\setbeamercolor*{block body}{bg=fuwhite,fg=fudarkblue}
\setbeamercolor*{block title}{fg=fuwhite,bg=fudarkblue}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=fudarkblue}

\setbeamercolor*{example body}{fg=fulightblue,bg=black}
\setbeamercolor*{example text}{fg=fulightblue,bg=black}
\setbeamercolor*{example title}{bg=fudarkblue,fg=ta2gray}

\setbeamercolor{alerted text}{fg=ta3gray}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=fudarkblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3ex,dp=1ex,center,rounded=true,shadow=true,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=true,leftskip=-.0cm,colsep*=-.25ex,sep=1ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
}
\setbeamertemplate{block end}{
  \end{beamercolorbox}
}

