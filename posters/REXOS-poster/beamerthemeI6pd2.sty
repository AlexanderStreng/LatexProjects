\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}
        \hfill
      \begin{column}{.10\paperwidth}
        \begin{center}
          \includegraphics[width=1\linewidth]{HuLogo.pdf}
        \end{center}
      \end{column}
      \hfill
      \begin{column}{.60\paperwidth}
        \vskip4ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
        \vskip1ex
      \end{column}
      \hfill
      \begin{column}{.10\paperwidth}
        \begin{center}
          \includegraphics[width=1\linewidth]{REXOSLogo.png}
        \end{center}
      \end{column}
      \hfill
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

